<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.proyectointegradorjavafx.controller.interfaces.LoginViewController"
            prefWidth="420.0" prefHeight="320.0">

    <children>
        <VBox spacing="15.0" layoutX="60.0" layoutY="40.0" prefWidth="300.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="INICIO DE SESIÓN" style="-fx-font-size: 18px; -fx-font-weight: bold;"
                   alignment="CENTER" maxWidth="Infinity"/>

            <TextField fx:id="txtUsuario" promptText="Usuario"/>
            <PasswordField fx:id="txtContrasena" promptText="Contraseña"/>

            <Button fx:id="btnIngresar" text="Ingresar" onAction="#ingresar"
                    prefHeight="35.0" maxWidth="Infinity"/>

            <Label fx:id="lblMensaje" text="" style="-fx-text-fill: red;"/>
        </VBox>
    </children>
</AnchorPane>

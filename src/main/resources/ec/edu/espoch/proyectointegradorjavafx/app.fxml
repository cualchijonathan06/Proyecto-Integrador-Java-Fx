<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="root" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espoch.proyectointegradorjavafx.controller.interfaces.OptimizacionViewController">

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
        
        <content>
            <StackPane>
                <padding><Insets bottom="30" left="20" right="20" top="30" /></padding>
                
                <VBox fx:id="panelTarjeta" alignment="TOP_CENTER" maxWidth="900.0" spacing="20.0" styleClass="panel-contenido">
                    
                    <BorderPane>
                        <left>
                            <VBox>
                                <Label styleClass="titulo-principal" text="Optimización de Proyectos" />
                                <Label text="Cálculo y Gestión" textFill="#7f8c8d" />
                            </VBox>
                        </left>
                        <right>
                            
                        </right>
                    </BorderPane>

                    <HBox style="-fx-border-color: transparent transparent #E0E0E0 transparent; -fx-border-width: 1;" />

                    <VBox alignment="CENTER_LEFT" spacing="15.0">
                        
                        <VBox spacing="5">
                            <Label style="-fx-font-weight: bold;" text="Ámbito del Problema:" />
                            <ComboBox fx:id="cmbAmbito" maxWidth="Infinity" promptText="Seleccione..." />
                        </VBox>

                        <VBox spacing="5">
                            <Label fx:id="lblDescripcionTitulo" style="-fx-font-weight: bold;" text="Descripción / Contexto:" />
                            <TextArea fx:id="txtDescripcion" prefHeight="80.0" promptText="Escriba aquí el contexto del problema..." wrapText="true" />
                        </VBox>

                        <HBox spacing="20.0">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label style="-fx-font-weight: bold;" text="Coeficiente A:" />
                                <TextField fx:id="txtA" promptText="Ej: 2.5" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label style="-fx-font-weight: bold;" text="Coeficiente B:" />
                                <TextField fx:id="txtB" promptText="Ej: 8" />
                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10 0 10 0;">
                            <Button id="btnCalcular" fx:id="btnCalcular" onAction="#calcular" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="CALCULAR SOLUCIÓN" />
                            <Button fx:id="btnGuardar" onAction="#guardar" styleClass="btn-secondary" text="Guardar" />
                            <Button fx:id="btnVerCalculo" onAction="#verCalculoMatematico" text="Ver Fórmula" />
                     <Button fx:id="btnVerCalculo1" onAction="#eliminarHistorial" text="Borrar historial" />
                        </HBox>
                    </VBox>

                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <Label fx:id="lblResultado" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Historial de Resultados" />
                        
                        <TableView fx:id="tblHistorial" prefHeight="300.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colAmbito" prefWidth="100" text="Ámbito" />
                                <TableColumn fx:id="colDescripcion" prefWidth="250" text="Descripción" />
                                <TableColumn fx:id="colA" prefWidth="50" text="A" />
                                <TableColumn fx:id="colB" prefWidth="50" text="B" />
                                <TableColumn fx:id="colResultado" prefWidth="200" text="Resultado" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </VBox>

                </VBox> </StackPane>
        </content>
    </ScrollPane>
</StackPane>
